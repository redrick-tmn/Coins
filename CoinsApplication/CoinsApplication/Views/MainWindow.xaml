<Window x:Class="CoinsApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:designTime="clr-namespace:CoinsApplication.DesignTime"
        xmlns:controls="clr-namespace:CoinsApplication.Views.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" 
        d:DataContext="{x:Static designTime:DesignTimeResources.MainWindowViewModel}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Converters.xaml"/>
                <ResourceDictionary Source="Styles.xaml"/>
                <ResourceDictionary Source="Templates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ComboBox ItemsSource="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}" DisplayMemberPath="Model.Name" HorizontalAlignment="Left" MinWidth="200">
            </ComboBox>
        </Grid>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
                <ColumnDefinition Width="0.3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ListView x:Name="ListView" ItemsSource="{Binding SelectedProfile.Model.Coins}" SelectedItem="{Binding SelectedProfile.SelectedCoin}" DisplayMemberPath="Title" Margin="{StaticResource DefaultThickness}">

            </ListView>

            <Border Grid.Column="1" BorderThickness="1" BorderBrush="{Binding ElementName=ListView, Path=BorderBrush}"  Margin="{StaticResource DefaultThickness}">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <controls:ImageControl DataContext="{Binding SelectedProfile}" />
                    
                    <TextBox Grid.Row="1" Margin="{StaticResource DefaultThickness}" Text="{Binding SelectedProfile.SelectedCoin.Title}"></TextBox>
                    <ComboBox Grid.Row="2" Margin="{StaticResource DefaultThickness}" ItemsSource="{Binding Currencies}" SelectedItem="{Binding SelectedProfile.SelectedCoin.Currency}" ItemTemplate="{StaticResource ComboBoxImageItemTemplate}"></ComboBox>
                    <ComboBox Grid.Row="3" Margin="{StaticResource DefaultThickness}" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedProfile.SelectedCoin.Country}" ItemTemplate="{StaticResource ComboBoxImageItemTemplate}"></ComboBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
