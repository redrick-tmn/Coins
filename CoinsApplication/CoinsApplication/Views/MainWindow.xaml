<Window x:Class="CoinsApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sampleData="clr-namespace:CoinsApplication.ViewModel.SampleData"
        xmlns:controls="clr-namespace:CoinsApplication.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" 
        d:DataContext="{x:Static sampleData:FakeCoinViewModelProvider.MainWindowViewModel}">

    <StackPanel>
        <ListBox ItemsSource="{Binding Coins}">

        </ListBox>
        <controls:TagEditor ></controls:TagEditor>
    </StackPanel>
</Window>
